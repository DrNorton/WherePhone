<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WherePhone.Views.TakeMeView">
  <StackLayout>
    <Label Text="Взять" VerticalOptions="Center" HorizontalOptions="Center" />
    <Label Text="{Binding YouName}" FontSize="40" VerticalOptions="Center" HorizontalOptions="Center" />
    <Button Text="Считать QR" Command="{Binding GetQrCodeCommand}"/>
    
    <ListView ItemsSource="{Binding Users}" VerticalOptions="Center" HorizontalOptions="Center">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ImageCell
           Text="{Binding Email}"
           Detail="{Binding FirstName}"
           ImageSource="http://www.informasimalaysia.com.my/staff/power_user/gal/images/1394462980ook%20anonymous.jpg">
          </ImageCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>

</ContentPage>